{
  "name": "open-community-groups",
  "private": true,
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "test:e2e": "playwright test --config tests/e2e/playwright.config.ts",
    "test:e2e:headed": "playwright test --config tests/e2e/playwright.config.ts --headed",
    "test:e2e:debug": "PWDEBUG=1 playwright test --config tests/e2e/playwright.config.ts",
    "test:e2e:ui": "playwright test --config tests/e2e/playwright.config.ts --ui",
    "test:e2e:chromium": "playwright test --config tests/e2e/playwright.config.ts --project=chromium",
    "test:e2e:firefox": "playwright test --config tests/e2e/playwright.config.ts --project=firefox",
    "test:e2e:webkit": "playwright test --config tests/e2e/playwright.config.ts --project=webkit"
  }
}
